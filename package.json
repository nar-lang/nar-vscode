{
  "name": "oak-language",
  "description": "Oak language extension",
  "author": "Sergey Dvoynikov",
  "license": "MIT",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/oaklang/vscode"
  },
  "publisher": "Sergey Dvoynikov",
  "categories": [
    "Programming Languages"
  ],
  "keywords": [],
  "engines": {
    "vscode": "^1.74.0"
  },
  "activationEvents": [
    "onLanguage:oak"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "languages": [
      {
        "id": "oak",
        "aliases": [
          "Oak",
          "oak"
        ],
        "extensions": [
          ".oak"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "oak",
        "scopeName": "source.oak",
        "path": "./syntaxes/oak.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "cd client && npm install && cd .. && npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint ./client/src --ext .ts,.tsx",
    "postinstall": "cd client && npm install"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.7",
    "@types/node": "^16.18.34",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^7.26.0",
    "typescript": "^5.3.2"
  }
}
